<Window x:Class="wpf_start.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_start"
        mc:Ignorable="d"
        Title="MainWindow" Height="470" Width="400"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="WindowLoad">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="10">
        <Label x:Name="lUsername" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center"></Label>
        <Label x:Name="lRole" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center"></Label>
        <Label x:Name="lDate" FontWeight="Bold" FontSize="10" HorizontalAlignment="Center"></Label>
        <Button x:Name="Bmanagers" Click="Managers">Managers</Button>
        <Button x:Name="Blibrarians" Click="Librarians">Librarians</Button>
        <Button x:Name="Bmembers" Click = "Members">Members</Button>
        <Button x:Name="Bbooks" Click = "Books">Books</Button>
        <Button Click="Exit_Click">Log Out</Button>
        </StackPanel>
    </Grid>
</Window>
